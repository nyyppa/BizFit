<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/serviceIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_chat_android" />

            <TextView
                android:id="@+id/serviceType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:text="Service type"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="@+id/serviceIcon"
                app:layout_constraintLeft_toRightOf="@+id/serviceIcon"
                app:layout_constraintTop_toTopOf="@+id/serviceIcon"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintRight_toLeftOf="@+id/imageView6"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="21.9."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/serviceIcon" />

            <TextView
                android:id="@+id/startYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="2017"
                app:layout_constraintLeft_toLeftOf="@+id/startDate"
                app:layout_constraintTop_toBottomOf="@+id/startDate" />

            <TextView
                android:id="@+id/expertName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="Alli Asiantuntija"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/serviceType"
                app:layout_constraintRight_toLeftOf="@+id/imageView6"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceType" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chevron_right"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/expertName"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/expertName"
                android:layout_marginBottom="0dp" />

            <ImageView
                android:id="@+id/statusCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/green"
                app:srcCompat="@drawable/ic_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/expertName"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/expertName" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Aktiivinen"
                app:layout_constraintLeft_toRightOf="@+id/statusCircle"
                app:layout_constraintRight_toLeftOf="@+id/imageView6"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/statusCircle"
                android:layout_marginBottom="0dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/statusCircle"
                android:layout_marginTop="0dp"
                app:layout_constraintVertical_bias="0.666" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>