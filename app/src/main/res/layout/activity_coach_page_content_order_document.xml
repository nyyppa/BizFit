<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Document"
        android:textSize="@dimen/text_subheading"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/twitter"
        android:drawablePadding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_headline_chat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <LinearLayout
        android:id="@+id/order_price_container"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/order_headline_chat"
        android:layout_marginTop="16dp">

        <TextView
            android:text="249â‚¬"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_price_document"
            android:textSize="50dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:text=" / document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_per_item"
            android:textSize="@dimen/text_subheading"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="Order Document"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white100"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_document"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/order_price_container"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
