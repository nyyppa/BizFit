<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Order Chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_headline"
        android:padding="32dp"
        android:textSize="@dimen/text_headline"
        android:textColor="@color/colorTextLight"
        android:textAllCaps="true"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Define Coaching Need"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_headline_category"
        android:textSize="@dimen/text_headline"
        android:gravity="center"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/order_chat_wizard_headline" />

    <Button
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_button_next"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/order_chat_wizard_progressbar"
        android:layout_marginBottom="16dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_progressbar"
        android:max="6"
        android:progress="1"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <RadioButton
        android:text="I want to solve my problem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_need_problem"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/order_chat_wizard_headline_category" />

    <TextView
        android:text="You have a spesific problem that you and the coach can tackle together."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_need_problem_description"
        app:layout_constraintTop_toBottomOf="@+id/order_chat_wizard_need_problem"
        android:layout_marginTop="8dp"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp" />

    <RadioButton
        android:text="I want to learn something"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_need_learn_something"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/order_chat_wizard_need_problem_description"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="You want knowledge in something that coach has expertise in."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_need_learn_something_description"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/order_chat_wizard_need_learn_something"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp" />

    <RadioButton
        android:text="I want to learn anything"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_need_learn_anything"
        app:layout_constraintTop_toBottomOf="@+id/order_chat_wizard_need_learn_something_description"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="You want common knowledge about what coach has expertise in."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_chat_wizard_need_learn_anything_description"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/order_chat_wizard_need_learn_anything"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp" />

</android.support.constraint.ConstraintLayout>
