<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_container">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_view_header_background"
                    android:orientation="vertical"
                    android:paddingBottom="24dp"
                    android:id="@+id/top_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:id="@+id/text_info_container">

                        <TextView
                            android:id="@+id/tracker_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tracker name"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="21sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:id="@+id/text_info_subcontainer">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                android:paddingRight="8dp"
                                android:id="@+id/small_text_container">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/target_info_pair">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Target"
                                        android:id="@+id/target_label"
                                        android:textColor="@color/abc_secondary_text_material_dark"
                                        android:theme="@style/TextAppearance.AppCompat.Subhead.Inverse"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/target_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10 000 €"
                                        android:theme="@style/Base.TextAppearance.AppCompat.Subhead.Inverse" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/progress_info_pair">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Progress"
                                        android:id="@+id/progress_label"
                                        android:textColor="@color/abc_secondary_text_material_dark"
                                        android:theme="@style/TextAppearance.AppCompat.Subhead.Inverse"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/progress_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="900 €"
                                        android:theme="@style/Base.TextAppearance.AppCompat.Subhead.Inverse" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/date_info_pair">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Date"
                                        android:id="@+id/date_label"
                                        android:textColor="@color/abc_secondary_text_material_dark"
                                        android:theme="@style/TextAppearance.AppCompat.Subhead.Inverse"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/date_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20.2.2015"
                                        android:theme="@style/Base.TextAppearance.AppCompat.Subhead.Inverse" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="right">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="999"
                                    android:textColor="@color/abc_secondary_text_material_dark"
                                    android:layout_weight="1"
                                    android:textAlignment="gravity"
                                    android:gravity="end"
                                    android:textIsSelectable="false"
                                    android:textSize="56sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="%"
                                    android:id="@+id/textView5"
                                    android:theme="@style/TextAppearance.AppCompat.Title.Inverse"
                                    android:textColor="@color/bright_foreground_disabled_material_dark" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:id="@+id/progress_bar"
                        android:progress="1000"
                        android:max="10000"
                        android:progressDrawable="@drawable/my_progressbar" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom_container"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <ImageButton
                        android:textSize="30sp"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:clickable="true"
                        app:layout_anchor="@id/bottom_container"
                        app:layout_anchorGravity="top|center" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="edit"
                        android:id="@+id/button_edit"
                        android:theme="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="add progress"
                        android:id="@+id/button_add_progress"
                        android:theme="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_gravity="right" />

                </LinearLayout>

            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>