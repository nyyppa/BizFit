<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/trackableview_height"
    android:weightSum="1"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:longClickable="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:duplicateParentState="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_info_container"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:duplicateParentState="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Label Name Place Holder"
                android:id="@+id/label"
                android:textSize="@dimen/abc_text_size_menu_material"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:duplicateParentState="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_left_container"
                android:layout_above="@+id/progressbar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:duplicateParentState="true">

                <ImageView
                    android:layout_width="@dimen/text_caption"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView"
                    android:src="@drawable/ic_timelapse"
                    android:maxHeight="10dp"
                    android:maxWidth="10dp"
                    android:tintMode="src_in"
                    android:tint="@color/colorBlack57"
                    android:layout_above="@+id/progressbar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:duplicateParentState="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Time Left Place Holder"
                    android:id="@+id/time_left"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:layout_above="@+id/progressbar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/trackableview_time_left_margin" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/percentage_container"
            android:layout_alignBottom="@+id/text_info_container"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:duplicateParentState="true">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/positive"
                android:duplicateParentState="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="100"
                android:id="@+id/percentage"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:duplicateParentState="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="%"
                android:id="@+id/percentage_suffix"
                android:textSize="@dimen/text_caption"
                android:duplicateParentState="true"/>
        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:indeterminate="false"
            android:progress="1"
            android:max="1"
            android:layout_below="@+id/text_info_container"
            android:duplicateParentState="true"/>

    </RelativeLayout>

</LinearLayout>