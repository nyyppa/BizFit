<?xml version="1.0" encoding="utf-8"?>
<com.bizfit.bizfit.views.WorkaroundNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:maxWidth="40dp"
    android:orientation="vertical">

    <!-- TODO reference values! -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="64dp">

        <include
            android:id="@+id/top"
            layout="@layout/fragment_view_tracker_content_daily_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp" />

        <include
            layout="@layout/fragment_view_tracker_content_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/abc_action_bar_item_background_material"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="@color/black54"
            android:tintMode="src_in" />

    </RelativeLayout>

</com.bizfit.bizfit.views.WorkaroundNestedScrollView>