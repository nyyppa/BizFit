<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="320dp"
            app:srcCompat="@drawable/dummy"
            android:id="@+id/user_banner_image"
            android:scaleType="fitCenter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:text="Firstname Surname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:textSize="@dimen/text_headline"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/user_banner_image"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent bibendum, mauris a semper volutpat, lectus ligula convallis lorem, a amet."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_desc"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textSize="@dimen/text_subheading"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" />

        <View
            android:id="@+id/separator_1"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/user_desc"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/coach_residence_container"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/separator_1"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/twitter"
                android:padding="4dp"
                />

            <TextView
                android:text="City, Country"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coach_residence" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/coach_categories_container"
            app:layout_constraintTop_toBottomOf="@+id/coach_residence_container"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/twitter"
                android:padding="4dp"
                />

            <TextView
                android:text="Category 1, Category 2"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:id="@+id/user_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/coach_languages_container"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/coach_categories_container"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/twitter"
                android:padding="4dp"
                />

            <TextView
                android:text="English, Suomi"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coach_languages"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/coach_experience_container"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/coach_languages_container"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/twitter"
                android:padding="4dp"
                />

            <TextView
                android:text="Coached since 2003"
                android:id="@+id/coach_experience"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:id="@+id/separator_2"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/coach_experience_container"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_height="1dp" />

        <TextView
            android:text="About Firstname"
            android:textSize="@dimen/text_subheading"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/coach_headline_about"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/separator_2"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:text="Nulla maximus aliquam nunc, a aliquam mi bibendum sit amet. Sed et dolor luctus, molestie ligula ac, vehicula odio. Vestibulum pretium neque vel purus suscipit dapibus. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Mauris turpis duis."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/coach_introduction"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/coach_headline_about"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:id="@+id/social_container"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/coach_introduction"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/linkedin_box"
                android:id="@+id/coach_social_linkedin"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="4dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/twitter"
                android:id="@+id/coach_social_twitter"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="4dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/facebook"
                android:id="@+id/coach_social_facebook"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="4dp"/>
        </LinearLayout>

        <View
            android:id="@+id/separator_3"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/social_container"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp" />

        <TextView
            android:text="Available Services"
            android:textSize="@dimen/text_subheading"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/coach_headline_services"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/separator_3"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <View
            android:id="@+id/separator_4"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/coach_headline_services"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_height="1dp" />

        <include
            android:id="@+id/order_chat_container"
            android:layout_width="0dp"
            layout="@layout/activity_coach_page_content_order_chat"
            app:layout_constraintTop_toTopOf="@+id/separator_4"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/separator_5"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/order_chat_container"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_height="1dp" />

        <include
            android:id="@+id/order_call_container"
            layout="@layout/activity_coach_page_content_order_call"
            app:layout_constraintTop_toBottomOf="@+id/separator_5"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/separator_6"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/order_call_container"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_height="1dp" />

        <include
            android:id="@+id/order_document_container"
            android:layout_width="0dp"
            layout="@layout/activity_coach_page_content_order_document"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/separator_6"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/separator_7"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/order_document_container"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_height="1dp" />

        <TextView
            android:text="Customer Ratings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/headline_ratings"
            android:textSize="@dimen/text_headline"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/separator_7"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foregroundTint="@color/black87"
            android:foregroundTintMode="src_in"
            android:rating="4.5"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/headline_ratings"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

    </android.support.constraint.ConstraintLayout>
