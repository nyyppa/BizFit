<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextCustom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="ViewTrackablePercentage" parent="AppTheme">
        <item name="android:textColor">@color/white100</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ViewTrackableNotes" parent="AppTheme">
        <item name="android:textColor">@color/black54</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="colorPrimary">@color/material_grey_50</item>
        <item name="colorPrimaryDark">@color/material_grey_600</item>
    </style>

    <!-- All fonts are applied progmatically -->
    <style name="AppTheme.CalendarDates" parent="AppTheme">
        <item name="android:textColor">@color/black54</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.CalendarHeader" parent="AppTheme">
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CalendarWeekHeader" parent="AppTheme">
        <item name="android:textColor">@color/black54</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BorderlessButton" parent="AppTheme">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
